<ui>
  <menubar action="menubar">
    <placeholder name="entries">
      <menu action="collection">
        <menuitem action="new-window"/>
        <menuitem action="edit-filter"/>
        <menuitem action="browse-in-new-window"/>
        <menuitem action="all-media"/>
        <separator/>
        <menuitem action="save-collection"/>
        <menuitem action="rename-collection"/>
        <menuitem action="remove-collection"/>
        <separator/>
        <menuitem action="add-to-playlist"/>
        <menuitem action="replace-playlist"/>
        <separator/>
        <menuitem action="close-window"/>
        <menuitem action="quit"/>
